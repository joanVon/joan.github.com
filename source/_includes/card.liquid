{% for card in site.data.case %}
<div class="case-card mdl-card mdl-shadow--2dp">
  <div class="case-bg" style="background-image: url({{ card.bgURL }});">
    <div class="mask">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">{{ card.name }}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <p>{{ card.contTitle }}</p>
      <p class="case-txt" title="{{ card.contInfo }}">{{ card.contInfo }}</p>
    </div>
    </div>
  </div>
  
  <div class="mdl-card__actions mdl-card--border">

    <a target="_blank" href="{{ card.link }}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Visit
    </a>
    <a target="_blank" href="{{ card.code }}" class="{{ card.isCode }} mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      View Source
    </a>
    
  </div>
</div>
{% endfor %}